<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta information and favicon -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/svg+xml" href="/images/code.png" />
   
    <!-- Link to external stylesheets (Bootstrap and custom styles) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="css/Style.css" />

    <title>Register</title>
  </head>

  <body>
    <!-- Main section for page content -->
    <main class="container-fluid">
      <!-- Centered row for the logo -->
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <!-- Logo Image -->
          <img src="./images/code.png" class="Logo img-fluid" alt="Logo" />
        </div>
      </div>

      <!-- Registration form container -->
      <div class="col-md-6 col-lg-4 p-5 box">
        <!-- Message and secondary logo -->
        <div class="msg">
          <p>Register here</p>
          <span>
            <img class="Logo2 ms-3" src="./images/code.png" alt="Logo" />
          </span>
        </div>

        <!-- Registration form with dynamic error messages and user input fields -->
        <form action="/" method="POST">
          <% if(messages.error) { %>
          <!-- Display error message if any -->
          <span class="text-red text-center para"> <%= messages.error %> </span>
          <% } %>
          
          <!-- Name input field -->
          <div class="mb-3">
            <label for="username" class="form-label font-weight-bold">Name</label>
            <input
              name="username"
              value="<%= messages.username %>"
              type="text"
              class="form-control"
              id="username"
              placeholder="Enter your name"
            />
          </div>

          <!-- Email input field -->
          <div class="mb-3">
            <label for="email" class="form-label font-weight-bold">Email</label>
            <input
              name="email"
              value="<%= messages.email %>"
              type="email"
              class="form-control"
              id="useremail"
              placeholder="Enter your email"
            />
          </div>

          <!-- Password input field -->
          <div class="mb-3">
            <label for="password" class="form-label font-weight-bold">Password</label>
            <input
              name="password"
              type="password"
              class="form-control"
              id="password"
              placeholder="********************"
            />
          </div>

          <!-- Submit button for registration -->
          <button type="submit" class="btn btn-primary btn-lg w-100">
            Register
          </button>
        </form>

        <!-- Link to login page if already a user -->
        <hr />
        <div class="row mt-3">
          <div class="col-md-12 text-center">
            <a class="inline-block font-weight-bold text-sm" href="/signin">
              Already a user? Login
            </a>
          </div>
        </div>
      </div>
    </main>

    <!-- Bootstrap JS script for functionality like modal, dropdown, etc. -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

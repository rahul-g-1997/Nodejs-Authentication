<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- ************************* Required meta tags ************************* -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ************************* Favicon ********************************** -->
    <link rel="icon" type="image/svg+xml" href="/images/code.png" />
    <!-- ********************** Bootstrap CSS ***************************** -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <!-- ********************** Bootstrap Icons *************************** -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />
    <!-- ************************* Custom CSS ****************************** -->
    <link rel="stylesheet" href="css/Style.css" />
    <title>Register</title>
  </head>

  <body>
    <!-- ************************* Main Container **************************** -->
    <div class="container-fluid">
      <!-- ******************** Logo Section ******************************** -->
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <img src="./images/code.png" class="Logo img-fluid" alt="Logo" />
        </div>
      </div>

      <!-- ***************** Registration Form Section ********************* -->
      <div class="col-md-6 col-lg-4 p-5 box">
        <!-- ********************** Title Section *************************** -->
        <div class="msg">
          <p>Register here</p>
          <span>
            <img class="CardLogo ms-3" src="./images/code.png" alt="Logo" />
          </span>
        </div>

        <!-- *********************** Registration Form ********************** -->
        <form action="/" method="POST">
          <% if (messages.error) { %>
          <div class="alert alert-danger"><%= messages.error %></div>
          <% } %> <% if (messages.success) { %>
          <div class="alert alert-success"><%= messages.success %></div>
          <% } %>
          <!-- Username Input -->
          <div class="mb-3">
            <label for="username" class="form-label font-weight-bold"
              >Name</label
            >
            <input
              name="username"
              value="<%= messages.username %>"
              type="text"
              class="form-control"
              id="username"
              placeholder="Enter your name"
            />
          </div>
          <!-- Email Input -->
          <div class="mb-3">
            <label for="email" class="form-label font-weight-bold">Email</label>
            <input
              name="email"
              value="<%= messages.email %>"
              type="email"
              class="form-control"
              id="useremail"
              placeholder="Enter your email"
            />
          </div>
          <!-- Password Input -->
          <div class="mb-3">
            <label for="password" class="form-label font-weight-bold"
              >Password</label
            >
            <input
              name="password"
              type="password"
              class="form-control"
              id="password"
              placeholder="********************"
            />
          </div>

          <!-- Register Button -->
          <button type="submit" class="btn btn-primary btn-lg w-100">
            Register
          </button>
        </form>

        <!-- *********************** Additional Links *********************** -->
        <hr />
        <div class="row mt-3">
          <div class="col-md-12 text-center">
            <!-- Login Link for Existing Users -->
            <a class="inline-block font-weight-bold text-sm" href="/signin">
              Already a user? Login
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- *********************** Bootstrap JS **************************** -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

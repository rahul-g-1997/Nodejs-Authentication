<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta tags for character encoding and responsive design -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Favicon for the webpage -->
    <link rel="icon" type="image/svg+xml" href="/images/code.png" />

    <!-- Bootstrap CSS for styling and responsive layout -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    
    <!-- Custom CSS file for additional styles -->
    <link rel="stylesheet" href="css/Style.css" />
    
    <!-- Page title -->
    <title>Home</title>
  </head>
  <body>
    <!-- Main container with a full-screen background -->
    <div class="container-fluid">
      <!-- Centered logo section -->
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <!-- Logo image -->
          <img src="./images/code.png" class="Logo img-fluid" alt="Logo" />
        </div>
      </div>

      <!-- Login success message box -->
      <div class="col-md-5 p-5 box">
        <!-- Success message and logo -->
        <div class="msg">
          <p>Login Successful</p>
          <span>
            <img class="CardLogo ms-3" src="./images/code.png" alt="Logo" />
          </span>
        </div>

        <!-- Logout form -->
        <form id="logout" action="/logout" method="POST">
          <!-- Button for logging out -->
          <div class="d-grid gap-2 col-8 mx-auto mt-4">
            <a
              onclick="document.getElementById('logout').submit()" 
              class="btn btn-primary mb-4" 
              href="#" 
              style="text-decoration: none"
              >LOG OUT</a
            >
          </div>
        </form>
      </div>
    </div>

    <!-- Bootstrap JavaScript for dynamic components and functionality -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

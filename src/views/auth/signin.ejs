    <link rel="stylesheet" href="css/Style.css">
    
    <!-- Title of the page -->
    <title>Login</title>
</head>

<body>
    <!-- Main container for the page -->
    <div class="container-fluid">
        <!-- Row to center the content -->
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <!-- Logo Image -->
                <img src="./images/code.png" class="Logo img-fluid" alt="Logo" />
            </div>
        </div>

        <!-- Login box section -->
        <div class="col-md-6 col-lg-4 p-5 box">
            <div class="msg">
                <p>Login here</p>
                <span>
                    <!-- Logo inside the message section -->
                    <img class="Logo2 ms-3" src="./images/code.png" alt="Logo" />
                </span>
            </div>

            <!-- Login form -->
            <form action="/signin" method="POST">
                <!-- Error message if there is one -->
                <% if(messages.error) { %>
                    <span class="text-red text-center para">
                        <%= messages.error %>
                    </span>
                <% } %>

                <!-- Username input field -->
                <div class="mb-3">
                    <label for="name" class="form-label font-bold">Name</label>
                    <input name="username" value="<%= messages.username  %>" type="text"
                        class="form-control" id="username" placeholder="Enter your name">
                </div>

                <!-- Password input field -->
                <div class="mb-3">
                    <label for="password" class="form-label font-bold">Password</label>
                    <input name="password" type="password" class="form-control" id="password"
                        placeholder="********************">
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
            </form>


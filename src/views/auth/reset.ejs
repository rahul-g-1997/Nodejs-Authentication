<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Metadata for the page -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Favicon: Icon for the browser tab -->
    <link rel="icon" type="image/svg+xml" href="/images/code.png" />
   
    <!-- Bootstrap CSS (for styling the page) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons for using icons on the page -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />

    <!-- Custom stylesheet for additional styling -->
    <link rel="stylesheet" href="css/Style.css" />
    
    <!-- Title for the page that appears in the browser tab -->
    <title>Reset Password</title>
  </head>

  <body>
    <!-- Container for the reset password form -->
    <div class="container-fluid">
      <!-- Row to center the content horizontally -->
      <div class="row justify-content-center">
        <!-- Column for the logo, displayed at the center -->
        <div class="col-md-6 col-lg-4">
          <img src="./images/code.png" class="Logo img-fluid" alt="Logo" />
        </div>
      </div>

      <!-- Reset password box -->
      <div class="col-md-5 p-5 box">
        <!-- Message section with a title and logo -->
        <div class="msg">
          <p>Reset Password</p>
          <span>
            <img class="Logo2 ms-3" src="./images/code.png" alt="Logo" />
          </span>
        </div>

        <!-- Form to reset the password -->
        <form action="/reset" method="POST">
          <!-- Display error message if any -->
          <% if(messages.error) { %>
          <span class="text-red-500 text-sm para"> <%= messages.error %> </span>
          <% } %>
          
          <!-- Username input field -->
          <div class="mb-3">
            <label for="email" class="form-label font-bold">Name</label>
            <input
              required
              name="username"
              value="<%= messages.username  %>" <!-- Pre-fill value if there's an error -->
              type="text"
              class="form-control"
              id="username"
              placeholder="Enter your name"
            />
          </div>
         
          <!-- Old password input field -->
          <div class="mb-3">
            <label for="password" class="form-label font-bold">Old Password</label>
            <input
              required
              name="oldpassword"
              type="password"
              class="form-control"
              id="oldpassword"
              placeholder="************************"
            />
          </div>

          <!-- New password input field -->
          <div class="mb-3">
            <label for="password" class="form-label font-bold">New Password</label>
            <input
              required
              name="newpassword"
              type="password"
              class="form-control"
              id="newpassword"
              placeholder="************************"
            />
          </div>

          <!-- Submit button to submit the form -->
          <button type="submit" class="btn btn-primary btn-lg w-100">
            Submit
          </button>

          <!-- Horizontal line for separation -->
          <hr />
          
          <!-- Link to register page -->
          <a
            class="inline-block align-baseline font-bold text-sm btn btn-primary"
            href="/"
          >
            Register
          </a>
          
          <!-- Link to sign-in page for users with an existing account -->
          <a
            class="inline-block align-baseline font-bold text-sm float-end msg-s"
            href="/signin"
          >
            Already have an account?
          </a>
        </form>
      </div>
    </div>

    <!-- Bootstrap JS (for handling interactive components like modals, tooltips, etc.) -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

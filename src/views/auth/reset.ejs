<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta tags for character encoding and responsive layout -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Favicon for the webpage -->
    <link rel="icon" type="image/svg+xml" href="/images/code.png" />

    <!-- Bootstrap CSS for styling and responsive components -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />

    <!-- Bootstrap Icons for additional styling -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />

    <!-- Custom CSS for project-specific styles -->
    <link rel="stylesheet" href="css/Style.css" />

    <!-- Page title -->
    <title>Reset Password</title>
  </head>

  <body>
    <!-- Container for the main content -->
    <div class="container-fluid">
      <!-- Row for the logo, centered horizontally -->
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <!-- Logo image -->
          <img src="./images/code.png" class="Logo img-fluid" alt="Logo" />
        </div>
      </div>

      <!-- Box containing the reset password form -->
      <div class="col-md-5 p-5 box">
        <!-- Heading section with an optional logo -->
        <div class="msg">
          <p>Reset Password</p>
          <span>
            <img class="CardLogo ms-3" src="./images/code.png" alt="Logo" />
          </span>
        </div>

        <!-- Reset password form -->
        <form action="/reset" method="POST">
           <% if (messages.error) { %>
          <div class="alert alert-danger"><%= messages.error %></div>
          <% } %> <% if (messages.success) { %>
          <div class="alert alert-success"><%= messages.success %></div>
          <% } %>

          <!-- Input for the username -->
          <div class="mb-3">
            <label for="email" class="form-label font-bold">Name</label>
            <input
              required
              name="username"
              value="<%= messages.username  %>"
              type="text"
              class="form-control"
              id="username"
              placeholder="Enter your name"
            />
          </div>

          <!-- Input for the old password -->
          <div class="mb-3">
            <label for="password" class="form-label font-bold"
              >Old Password</label
            >
            <input
              required
              name="oldpassword"
              type="password"
              class="form-control"
              id="oldpassword"
              placeholder="************************"
            />
          </div>

          <!-- Input for the new password -->
          <div class="mb-3">
            <label for="password" class="form-label font-bold"
              >New Password</label
            >
            <input
              required
              name="newpassword"
              type="password"
              class="form-control"
              id="newpassword"
              placeholder="************************"
            />
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg w-100">
            Submit
          </button>

          <!-- Horizontal line for separating links -->
          <hr />

          <!-- Link for registering a new account -->
          <a
            class="inline-block align-baseline font-bold text-sm btn btn-primary"
            href="/"
          >
            Register
          </a>

          <!-- Link for users with an existing account -->
          <a
            class="inline-block align-baseline font-bold text-sm float-end msg-s"
            href="/signin"
          >
            Already have an account?
          </a>
        </form>
      </div>
    </div>

    <!-- Bootstrap JS for interactive components -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
